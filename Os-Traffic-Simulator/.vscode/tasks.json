{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ File",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-mconsole"
            ],
            "group": {
                
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
